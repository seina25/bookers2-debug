<div class='container px-5 px-sm-0'>
  <div class='row'>
    <div class='col-md-3'>
      <h2>User info</h2>
      <%= render 'users/info', user: @user, follower_users: @follower_users, following_users: @following_users %>
      <%= render 'users/follow_button', user: @user %>
      <div class="btn-toolbar">
        <div class="btn-group">
          <%= link_to "フォロワーを見る", user_followers_path(@user), class: "btn btn-outline-primary" %>
          <%= link_to "フォローを見る", user_followings_path(@user), class: "btn btn-outline-primary" %>
        </div>
      </div>
      <h2 class="mt-3">New book</h2>
      <%= render 'books/form', book: @book %>
    </div>
    <div class='col-md-8 offset-md-1'>
      <h2>Books</h2>
      <%= render 'books/index',books: @books %>
    </div>
  </div>
</div>